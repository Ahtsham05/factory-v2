{
  "name": "factory-app-mern",
  "version": "2.0.0",
  "description": "Factory Management MERN Stack Application",
  "private": true,
  "scripts": {
    "install-all": "npm install && cd client && npm install && cd ../server && npm install",
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "start": "concurrently \"npm run server:start\" \"npm run client:start\"",
    "build": "npm run client:build && npm run server:build",
    "client:dev": "cd client && npm run dev",
    "client:build": "cd client && npm run build",
    "client:start": "cd client && npm run preview",
    "server:dev": "cd server && npm run dev",
    "server:start": "cd server && npm run start",
    "server:build": "cd server && npm run build",
    "setup": "npm run install-all && npm run build",
    "app:start": "npm run setup && npm run start"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "mern",
    "factory",
    "management",
    "react",
    "node",
    "express",
    "mongodb"
  ]
}
